<% include ./partials/header %>

<form class="card col-lg-6 container mt-5" style="width: 30rem;" action="/blogs" method="POST">
        <div class="form-group pt-3">
            <label>Title</label>
            <input class="form-control" type="text" name="blog[title]" placeholder="title">
        </div>
        <div class="form-group">
            <label>Image</label>
            <input class="form-control" type="text" name="blog[image]" placeholder="image">
        </div>
        <div class="form-group">
            <label>Blog Content</label>
            <textarea class="form-control" name="blog[content]"></textarea>
        </div>
        <input class="btn btn-success mb-4 mt-3" type="submit" value="Submit">
</form>

<% include ./partials/footer %>